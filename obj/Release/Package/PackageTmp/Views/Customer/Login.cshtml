@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Play with me</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/Content/web.play.with.me.common.css">
    <style>
        input {
            width: 100%;
        }
    </style>
</head>
<body>

    <div id="biggestContainer">
        @Html.Partial("~/Views/Shared/biggestContainer_Top.cshtml")
        <form>
            <label for="userName">Số điện thoại:</label><br>
            <input type="text" id="userName" value=""><br><br>

            <label for="passWord">Mật khẩu:</label><br>
            <input type="password" id="passWord" value=""><br><br>
        </form>
        <div>
            <button type="button" onclick="Login_Login()">Đăng nhập</button>
        </div>

        <p id="result-insert"></p>

        <script>
            function Login_Login() {
                const xhttp = new XMLHttpRequest();
                xhttp.onload = function () {
                    if (this.readyState == 4 && this.status == 200) {
                        //document.getElementById("result-insert").innerHTML = this.responseText;

                        const obj = JSON.parse(this.responseText);
                        if (DEBUG) {
                            console.log(obj);
                        }
                        if (obj !== null) {
                            if (obj.isValid === false) {
                                //if (obj.state === 3)
                                //    document.getElementById("result-insert").innerHTML = "SDT không đúng.";
                                //else
                                document.getElementById("result-insert").innerHTML = "Tài khoản hoặc mật khẩu không đúng.";
                                return;
                            }
                            else {
                                document.getElementById("result-insert").innerHTML = "Đăng nhập thành công.";
                                window.location.href = "/Customer/Update";
                                //return;
                            }
                        }
                    }
                }

                const searchParams = new URLSearchParams();
                let userName = document.getElementById("userName").value;

                searchParams.append("userName", userName);

                let passWord = document.getElementById("passWord").value;

                searchParams.append("passWord", passWord);

                let query = "/Customer/Login_Login";
                if (DEBUG) {
                    console.log(query);
                    console.log(searchParams.toString());
                }
                xhttp.open("POST", query);
                xhttp.setRequestHeader("Content-type", "application/x-www-form-urlencoded");
                xhttp.send(searchParams.toString());
            }
        </script>
    </div>
    <script src="~/Scripts/web.play.with.me.update.width.js"></script>
    <script src="~/Scripts/web.play.with.me.common.js"></script>
</body>
</html>
