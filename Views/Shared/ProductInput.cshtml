<form class="config-max-width">
    @Html.Partial("~/Views/Shared/ProductNameSelect.cshtml")

    <label for="code">Mã sản phẩm(bắt đầu bằng 89):</label><br>
    <input class="config-max-width margin-vertical" type="text" id="code" value="">
    <br>
    <br>

    <label for="barcode">Mã vạch(ISBN,không chứa ký tự đặc biệt -,/,..):</label><br>
    <input class="config-max-width margin-vertical" type="text" id="barcode" value="">
    <br>
    <br>

    @Html.Partial("~/Views/Shared/ProductInputCommon.cshtml")

    @Html.Partial("~/Views/Shared/ParentIdSelect.cshtml")

    <label for="detail">Thông tin chi tiết thêm:</label><br>
    <textarea id="detail" rows="10" style="width:100%" value=""></textarea>
    <br>
    <br>
    <div>
        <input class="margin-vertical"
               type="file"
               id="videofileElem"
               accept="video/*"
               style="display:none" />
        <div id="videofileList">
            <p>Chưa video nào được chọn!</p>
        </div>
        <a href="#" id="videofileSelect">Chọn video</a>
        @*<a href="#" id="videofileUnSelect">Bỏ chọn video</a>*@
    </div>
    <br />
    <div>
        <input class="margin-vertical"
               type="file"
               id="imagefileElem"
               multiple
               accept="image/*"
               style="display:none" />

        <div id="imagefileList">
            <p>Chưa ảnh nào được chọn!</p>
        </div>
        <a href="#" id="imagefileSelect">Chọn ảnh</a>
        @*<a href="#" id="imagefileUnSelect">Bỏ chọn ảnh</a>*@
    </div>
</form>
